{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "edusiteco/service-card",
  "title": "Tarjeta de Servicio (Psicoorientación)",
  "category": "edusiteco-blocks",
  "icon": "smiley",
  "description": "Una tarjeta para mostrar un servicio de psicoorientación.",
  "textdomain": "edusiteco",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js",
  "render": "file:./render.php",
  "supports": {
    "html": false,
    "align": [
      "full",
      "wide"
    ]
  },
  "attributes": {
    "items": {
      "type": "array",
      "default": []
    },
    "columns": {
      "type": "number",
      "default": 2
    },
    "imageSize": {
      "type": "number",
      "default": 64
    },
    "gap": {
      "type": "number",
      "default": 4
    },
    "fontSize": {
      "type": "number",
      "default": 16
    },
    "title": {
      "type": "string",
      "default": ""
    }
  }
}