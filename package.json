{
  "name": "underscores",
  "version": "1.0.0",
  "description": "Hi. I'm a starter theme called _s, or underscores, if you like. I'm a theme meant for hacking so don't use me as a Parent Theme. Instead try turning me into the next, most awesome, WordPress theme out there. That's what I'm here for.",
  "author": "Automattic Theme Team",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme"
  ],
  "homepage": "https://github.com/Automattic/_s#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Automattic/_s.git"
  },
  "bugs": {
    "url": "https://github.com/Automattic/_s/issues"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@wordpress/scripts": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "dir-archiver": "^1.1.1",
    "postcss": "^8.5.6",
    "rtlcss": "^3.5.0",
    "tailwindcss": "^3.4.1"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/css/index.css -o ./assets/css/index.css --minify",
    "watch:css": "npx tailwindcss -i ./src/css/index.css -o ./assets/css/index.css --watch",
    "dev:css": "npx tailwindcss -i ./src/css/index.css -o ./assets/css/index.css --watch --source-map",
    "build:js": "wp-scripts build --webpack-src-dir=src/js --output-path=assets/js",
    "watch:js": "wp-scripts start --webpack-src-dir=src/js --output-path=assets/js",
    "watch": "npm run watch:css",
    "dev": "npm run dev:css",
    "build": "npm run build:css && npm run build:js",
    "compile:rtl": "rtlcss assets/css/base.css assets/css/base-rtl.css",
    "lint:js": "wp-scripts lint-js 'src/js/*.js'",
    "clean": "Remove-Item -Recurse -Force assets/css/*, assets/js/* -ErrorAction SilentlyContinue",
    "bundle": "npm run build && dir-archiver --src . --dest ../_s.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist src postcss.config.js tailwind.config.js yarn.lock"
  }
}
